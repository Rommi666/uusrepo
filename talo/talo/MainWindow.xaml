<Window
    x:Class="TalonOhjausSovellus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Talon ohjaus"
    Width="525"
    Height="350">
    <Grid>
        <Button
            x:Name="ValotButton"
            Width="75"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ValotButton_Click"
            Content="Valot" />
        <TextBlock
            x:Name="LampotilaTextBlock"
            Margin="10,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="24"
            Text="Lämpötila: 20" />
        <Slider
            x:Name="LampotilaSlider"
            Width="100"
            Margin="10,100,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="30"
            Minimum="10"
            ValueChanged="LampotilaSlider_ValueChanged"
            Value="20" />
        <Button
            x:Name="OviButton"
            Width="75"
            Margin="10,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="OviButton_Click"
            Content="Ovi kiinni" />
    </Grid>
</Window>
